{
  "title": "Add New Employee",
   "apiEndpoints": {
    "create": "{{API_BASE}}/employees",
    "list": "{{API_BASE}}/employees",
    "getById": "{{API_BASE}}/employees/{id}",
    "update": "{{API_BASE}}/employees/{id}",
    "delete": "{{API_BASE}}/employees/{id}"
  },
  "subtitle": "Complete employee enrollment with personal, education & experience details.",
  
 "stepper": [
  {
    "key": "personal",
    "label": "Personal",
    "icon": "person"
  },
  {
    "key": "professional",
    "label": "Professional",
    "icon": "work"
  },
  {
    "key": "education",
    "label": "Education",
    "icon": "school"
  },
  {
    "key": "experience",
    "label": "Experience",
    "icon": "history"
  },
  {
    "key": "certifications",
    "label": "Certifications",
    "icon": "workspace_premium"
  },
  {
    "key": "bankDetails",
    "label": "Bank Details",
    "icon": "account_balance"
  }
],
  "sections": [
    {
      "title": "Personal Information",
      "icon": "person",
      "layout": "two-column",
      "fields": [
        {
          "id": "photo",
          "label": "Upload Employee Passport Size Photo",
          "type": "photo",
          "required": true,
          "buttonText": {
            "choose": "Select Photo",
            "upload": "Upload Photo",
            "view": "View Photo"
          },
          "buttons": [
            {
              "id": "photoSelect",
              "label": "Select Photo",
              "variant": "outlineSecondary",
              "size": "sm",
              "bgColor": "#fff",
              "textColor": "#333",
              "borderColor": "#999"
            },
            {
              "id": "photoUpload",
              "label": "Upload Photo",
              "variant": "primary",
              "size": "sm",
              "bgColor": "#451111",
              "textColor": "#fff"
            },
            {
              "id": "photoView",
              "label": "View Photo",
              "variant": "secondary",
              "size": "sm",
              "bgColor": "#e5e5e5",
              "textColor": "#111"
            }
          ]
        },
        {
          "id": "employeeCode",
          "label": "Enter Employee Code",
          "type": "text",
          "required": true,
          "validation": "alphanumeric",
          "maxLength": 20,
          "errorMessage": "Employee code must be alphanumeric",
          "placeholder": "E.g., EMP00123"
        },
        {
          "id": "employeeName",
          "type": "text",
          "label": "Enter Full Employee Name",
          "required": true,
          "validation": "name",
          "maxLength": 100,
          "errorMessage": "Name should contain only letters and spaces",
          "placeholder": "John Doe",
          "bgColor": "",
          "wrapperBg": "#f3f4f6",
          "borderColor": "border-[#e66]",
          "rounded": "rounded-xl"
        },
        {
          "id": "workEmail",
          "label": "Enter Work Email Address",
          "type": "email",
          "required": true,
          "validation": "email",
          "errorMessage": "Please enter a valid email address",
          "placeholder": "john.doe@company.com",
          "showVerifiedStatus": true
        },
        {
          "id": "mobileNumber",
          "label": "Enter Mobile Number",
          "type": "text",
          "required": true,
          "validation": "mobile",
          "maxLength": 10,
          "errorMessage": "Mobile number must be 10 digits",
          "placeholder": "9876543210"
        },
        {
          "id": "gender",
          "label": "Select Gender",
          "type": "select",
          "required": true,
          "options": [
            {
              "label": "Male",
              "value": "male"
            },
            {
              "label": "Female",
              "value": "female"
            },
            {
              "label": "Other",
              "value": "other"
            }
          ]
        },
        {
          "id": "passport",
          "type": "text",
          "label": "Enter Passport Number",
          "required": true,
          "validation": "alphanumeric",
          "maxLength": 15,
          "errorMessage": "Passport number must be alphanumeric",
          "placeholder": "A1234567",
          "bgColor": "",
          "wrapperBg": "#f3f4f6",
          "borderColor": "border-[#e66]",
          "rounded": "rounded-xl"
        },
        {
          "id": "adhaar",
          "type": "text",
          "label": "Enter Aadhaar Number",
          "required": true,
          "validation": "adhaar",
          "maxLength": 12,
          "errorMessage": "Aadhaar must be 12 digits",
          "placeholder": "123456789012",
          "bgColor": "",
          "wrapperBg": "#f3f4f6",
          "borderColor": "border-[#e66]",
          "rounded": "rounded-xl"
        },
        {
          "id": "pan",
          "type": "text",
          "label": "Enter PAN Number",
          "required": true,
          "validation": "alphanumeric",
          "maxLength": 10,
          "errorMessage": "PAN must be 10 characters (e.g., ABCDE1234F)",
          "placeholder": "ABCDE1234F",
          "pattern": "^[A-Z]{5}[0-9]{4}[A-Z]{1}$",
          "bgColor": "",
          "wrapperBg": "#f3f4f6",
          "borderColor": "border-[#e66]",
          "rounded": "rounded-xl"
        },
        {
          "id": "department",
          "label": "Select Department",
          "type": "select",
          "required": true,
          "options": [
            "Human Resource (HR)",
            "Information Technology (IT)",
            "Finance",
            "Sales",
            "Marketing",
            "Development"
          ]
        },
        {
          "id": "dob",
          "label": "Select Date of Birth",
          "type": "date",
          "required": true
        },
        {
          "id": "remarks",
          "label": "Additional Remarks (Optional)",
          "type": "text",
          "rows": 3,
          "maxLength": 500,
          "placeholder": "Any additional information..."
        }
      ]
    },
    {
      "title": "Professional Information",
      "icon": "work",
      "layout": "two-column",
      "fields": [
        {
          "id": "jobTitle",
          "label": "Job Title",
          "type": "text",
          "required": true,
          "validation": "name",
          "maxLength": 50,
          "errorMessage": "Job title should contain only letters and spaces",
          "placeholder": "Software Engineer"
        },
        {
          "id": "departmentName",
          "label": "Department",
          "type": "text",
          "required": true,
          "validation": "name",
          "maxLength": 50,
          "errorMessage": "Department name should contain only letters and spaces",
          "placeholder": "Information Technology"
        },
        {
          "id": "joiningDate",
          "label": "Joining Date",
          "type": "date",
          "required": true
        },
        {
          "id": "employeeStatus",
          "label": "Employee Status",
          "type": "select",
          "required": true,
          "options": [
            "Employee",
            "Contract",
            "Intern"
          ]
        }
      ]
    },
    {
      "title": "Education Details",
      "icon": "school",
      "layout": "two-column",
      "fields": [
        {
          "id": "tenthMarks",
          "label": "10th Percentage (%)",
          "type": "text",
          "validation": "numeric",
          "maxLength": 5,
          "errorMessage": "Percentage must be a number",
          "placeholder": "85.5"
        },
        {
          "id": "twelfthMarks",
          "label": "12th Percentage (%)",
          "type": "text",
          "validation": "numeric",
          "maxLength": 5,
          "errorMessage": "Percentage must be a number",
          "placeholder": "78.2"
        },
        {
          "id": "graduation",
          "label": "Graduation Degree",
          "type": "text",
          "validation": "name",
          "maxLength": 100,
          "errorMessage": "Degree name should contain only letters and spaces",
          "placeholder": "Bachelor of Technology"
        },
        {
          "id": "university",
          "label": "University / College Name",
          "type": "text",
          "validation": "name",
          "maxLength": 150,
          "errorMessage": "University name should contain only letters and spaces",
          "placeholder": "University of Example"
        },
        {
          "id": "specialization",
          "label": "Specialization / Major Subject",
          "type": "text",
          "validation": "name",
          "maxLength": 100,
          "errorMessage": "Specialization should contain only letters and spaces",
          "placeholder": "Computer Science"
        }
      ]
    },
    {
      "title": "Work Experience",
      "icon": "history",
      "fields": [
        {
          "id": "experienceType",
          "label": "Do You Have Prior Experience?",
          "type": "select",
          "required": true,
          "options": [
            "Fresher",
            "Experienced"
          ]
        }
      ],
      "experienceForm": [
        {
          "id": "companyName",
          "label": "Previous Company Name",
          "type": "text",
          "required": true,
          "validation": "name",
          "maxLength": 100,
          "errorMessage": "Company name should contain only letters and spaces",
          "placeholder": "Previous Company Inc."
        },
        {
          "id": "role",
          "label": "Role / Position",
          "type": "text",
          "required": true,
          "validation": "name",
          "maxLength": 50,
          "errorMessage": "Role should contain only letters and spaces",
          "placeholder": "Senior Developer"
        },
        {
          "id": "experienceCategory",
          "label": "Experience Type",
          "type": "select",
          "required": true,
          "options": [
            "Relevant",
            "Non-Relevant"
          ]
        },
        {
          "id": "fromDate",
          "label": "Working From (Date)",
          "type": "date",
          "required": true
        },
        {
          "id": "toDate",
          "label": "Working Till (Date)",
          "type": "date",
          "required": true
        }
      ]
    },
    {
      "title": "Certifications",
      "icon": "workspace_premium",
      "fields": [
        {
          "id": "hasCertification",
          "label": "Do You Have Any Professional Certifications?",
          "type": "select",
          "required": true,
          "options": [
            {
              "label": "No Certification",
              "value": "none"
            },
            {
              "label": "Yes (Have Certifications)",
              "value": "yes"
            }
          ]
        }
      ],
      "certificationForm": [
        {
          "id": "certificateMaster",
          "label": "Select Certification",
          "type": "select",
          "required": true,
          "options": [
            "AWS Solutions Architect",
            "RedHat RHCE",
            "Microsoft Azure",
            "Google Cloud",
            "Oracle DBA",
            "Cyber Security",
            "DevOps Engineer",
            "Other"
          ]
        },
        {
          "id": "certificateName",
          "label": "If Other, Enter Certification Name",
          "type": "text",
          "validation": "name",
          "maxLength": 100,
          "errorMessage": "Certification name should contain only letters and spaces",
          "placeholder": "Custom Certification Name",
          "showIf": {
            "field": "certificateMaster",
            "value": "Other"
          }
        },
        {
          "id": "certificateId",
          "label": "Certificate ID / License Number",
          "type": "text",
          "required": true,
          "validation": "alphanumeric",
          "maxLength": 50,
          "errorMessage": "Certificate ID must be alphanumeric",
          "placeholder": "CERT-12345-ABC"
        },
        {
          "id": "uploadCertificate",
          "label": "Upload Certificate File",
          "type": "photo",
          "required": true,
          "buttonText": {
            "choose": "Choose File",
            "upload": "Upload Certificate",
            "view": "Preview"
          },
          "buttons": [
            {
              "id": "photoSelect",
              "label": "Choose File",
              "variant": "outlineSecondary",
              "size": "sm",
              "bgColor": "#fff",
              "textColor": "#333",
              "borderColor": "#999"
            },
            {
              "id": "photoUpload",
              "label": "Upload Certificate",
              "variant": "primary",
              "size": "sm",
              "bgColor": "#451111",
              "textColor": "#fff"
            },
            {
              "id": "photoView",
              "label": "Preview",
              "variant": "secondary",
              "size": "sm",
              "bgColor": "#e5e5e5",
              "textColor": "#111"
            }
          ]
        }
      ]
    },
    {
      "title": "Bank Details",
      "icon": "account_balance",
      "layout": "two-column",
      "fields": [
        {
          "id": "bankName",
          "label": "Bank Name",
          "type": "text",
          "required": false,
          "validation": "name",
          "maxLength": 100,
          "errorMessage": "Bank name should contain only letters and spaces",
          "placeholder": "State Bank of India"
        },
        {
          "id": "accountHolderName",
          "label": "Account Holder Name",
          "type": "text",
          "required": false,
          "validation": "name",
          "maxLength": 100,
          "errorMessage": "Name should contain only letters and spaces",
          "placeholder": "John Doe",
          "note": "Name as per bank records"
        },
        {
          "id": "accountNumber",
          "label": "Bank Account Number",
          "type": "text",
          "required": true,
          "validation": "numeric",
          "maxLength": 20,
          "errorMessage": "Account number must be numeric",
          "placeholder": "123456789012"
        },
        {
          "id": "ifscCode",
          "label": "IFSC Code",
          "type": "text",
          "required": false,
          "validation": "alphanumeric",
          "maxLength": 11,
          "errorMessage": "IFSC must be 11 characters alphanumeric",
          "placeholder": "SBIN0001234",
          "pattern": "^[A-Z]{4}0[A-Z0-9]{6}$",
          "note": "Format: ABCD0123456 (4 letters, 0, 6 alphanumeric)"
        },
        {
          "id": "accountType",
          "label": "Account Type",
          "type": "select",
          "required": false,
          "options": [
            {
              "label": "Savings Account",
              "value": "savings"
            },
            {
              "label": "Current Account",
              "value": "current"
            },
            {
              "label": "Salary Account",
              "value": "salary"
            }
          ],
          "default": "savings"
        },
        {
          "id": "bankRemarks",
          "label": "Bank Details Remarks (Optional)",
          "type": "text",
          "rows": 2,
          "maxLength": 200,
          "placeholder": "Any special instructions or remarks about bank account"
        }
      ]
    }
  ],
  "actions": [
    {
      "id": "previous",
      "label": "Previous",
      "variant": "outlineSecondary",
      "size": "md"
    },
    {
      "id": "next",
      "label": "Next â†’",
      "variant": "primary",
      "size": "md",
      "bgColor": "#451111"
    },
    {
      "id": "save",
      "label": "Save Employee Record",
      "bgColor": "#451111",
      "textColor": "#fff",
      "size": "md"
    },
    {
      "id": "cancel",
      "label": "Cancel Entry",
      "borderColor": "#B11212",
      "textColor": "#B11212",
      "bgColor": "#fff",
      "size": "md"
    },
    {
      "id": "addExperience",
      "label": "+ Add Previous Experience",
      "variant": "outlineSecondary",
      "size": "md",
      "fullWidth": true,
      "bgColor": "#ffffff",
      "textColor": "#333",
      "borderColor": "#999"
    },
    {
      "id": "removeCompany",
      "label": "Remove This Experience",
      "variant": "outlineDanger",
      "size": "sm"
    },
    {
      "id": "addCertification",
      "label": "+ Add Professional Certification",
      "variant": "outlineSecondary",
      "size": "md",
      "fullWidth": true,
      "bgColor": "#ffffff",
      "textColor": "#333",
      "borderColor": "#999"
    },
    {
      "id": "removeCertification",
      "label": "Remove Certification",
      "variant": "outlineDanger",
      "size": "sm"
    }
  ]
}