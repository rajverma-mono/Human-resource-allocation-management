{
  "title": "Add New Employee",
  "subtitle": "Complete employee enrollment with personal, education & experience details.",
  "stepper": [
    {
      "key": "personal"
    },
    {
      "key": "professional"
    },
    {
      "key": "education"
    },
    {
      "key": "experience"
    },
    {
      "key": "certifications"
    }
  ],
  "sections": [
    {
      "title": "Personal Information",
      "icon": "fas fa-id-card",
      "layout": "two-column",
      "fields": [
        {
          "id": "photo",
          "label": "Upload Employee Passport Size Photo",
          "type": "photo",
          "required": true,
          "buttonText": {
            "choose": "Select Photo",
            "upload": "Upload Photo",
            "view": "View Photo"
          },
          "buttons": [
            {
              "id": "photoSelect",
              "label": "Select Photo",
              "variant": "outlineSecondary",
              "size": "sm",
              "bgColor": "#fff",
              "textColor": "#333",
              "borderColor": "#999"
            },
            {
              "id": "photoUpload",
              "label": "Upload Photo",
              "variant": "primary",
              "size": "sm",
              "bgColor": "#451111",
              "textColor": "#fff"
            },
            {
              "id": "photoView",
              "label": "View Photo",
              "variant": "secondary",
              "size": "sm",
              "bgColor": "#e5e5e5",
              "textColor": "#111"
            }
          ]
        },
        {
          "id": "employeeCode",
          "label": "Enter Employee Code",
          "type": "text",
          "required": true
        },
        {
          "id": "employeeName",
          "type": "text",
          "label": "Enter Full Employee Name",
          "bgColor": "",
          "wrapperBg": "#f3f4f6",
          "borderColor": "border-[#e66]",
          "rounded": "rounded-xl",
          "required": true
        },
        {
          "id": "workEmail",
          "label": "Enter Work Email Address",
          "type": "email",
          "required": true
        },
        {
          "id": "mobileNumber",
          "label": "Enter Mobile Number",
          "type": "number",
          "required": true
        },
        {
          "id": "gender",
          "label": "Select Gender",
          "type": "select",
          "options": [
            {
              "label": "Male",
              "value": "male"
            },
            {
              "label": "Female",
              "value": "female"
            },
            {
              "label": "Other",
              "value": "other"
            }
          ]
        },
        {
          "id": "department",
          "label": "Select Department",
          "type": "select",
          "options": [
            "Human Resource (HR)",
            "Information Technology (IT)",
            "Finance",
            "Sales",
            "Marketing",
            "Development"
          ]
        },
        {
          "id": "dob",
          "label": "Select Date of Birth",
          "type": "date"
        },
        {
          "id": "remarks",
          "label": "Additional Remarks (Optional)",
          "type": "textarea",
          "rows": 3
        }
      ]
    },
    {
      "title": "Professional Information",
      "icon": "fas fa-briefcase",
      "layout": "two-column",
      "fields": [
        {
          "id": "jobTitle",
          "label": "Job Title",
          "type": "text",
          "required": true
        },
        {
          "id": "departmentName",
          "label": "Department",
          "type": "text"
        },
        {
          "id": "joiningDate",
          "label": "Joining Date",
          "type": "date"
        },
        {
          "id": "employeeStatus",
          "label": "Employee Status",
          "type": "select",
          "options": [
            "Full-Time",
            "Contract",
            "Intern"
          ]
        }
      ]
    },
    {
      "title": "Education Details",
      "icon": "fas fa-graduation-cap",
      "layout": "two-column",
      "fields": [
        {
          "id": "tenthMarks",
          "label": "10th Percentage (%)",
          "type": "number"
        },
        {
          "id": "twelfthMarks",
          "label": "12th Percentage (%)",
          "type": "number"
        },
        {
          "id": "graduation",
          "label": "Graduation Degree",
          "type": "text"
        },
        {
          "id": "university",
          "label": "University / College Name",
          "type": "text"
        },
        {
          "id": "specialization",
          "label": "Specialization / Major Subject",
          "type": "text"
        }
      ]
    },
    {
      "title": "Work Experience",
      "icon": "fas fa-history",
      "fields": [
        {
          "id": "experienceType",
          "label": "Do You Have Prior Experience?",
          "type": "select",
          "options": [
            "Fresher",
            "Experienced"
          ]
        }
      ],
      "experienceForm": [
        {
          "id": "companyName",
          "label": "Previous Company Name",
          "type": "text"
        },
        {
          "id": "role",
          "label": "Role / Position",
          "type": "text"
        },
        {
          "id": "experienceCategory",
          "label": "Experience Type",
          "type": "select",
          "options": [
            "Relevant",
            "Non-Relevant"
          ]
        },
        {
          "id": "fromDate",
          "label": "Working From (Date)",
          "type": "date"
        },
        {
          "id": "toDate",
          "label": "Working Till (Date)",
          "type": "date"
        }
      ]
    },
    {
      "title": "Certifications",
      "icon": "fas fa-certificate",
      "fields": [
        {
          "id": "hasCertification",
          "label": "Do You Have Any Professional Certifications?",
          "type": "select",
          "options": [
            {
              "label": "No Certification",
              "value": "none"
            },
            {
              "label": "Yes (Have Certifications)",
              "value": "yes"
            }
          ]
        }
      ],
      "certificationForm": [
        {
          "id": "certificateMaster",
          "label": "Select Certification",
          "type": "select",
          "options": [
            "AWS Solutions Architect",
            "RedHat RHCE",
            "Microsoft Azure",
            "Google Cloud",
            "Oracle DBA",
            "Cyber Security",
            "DevOps Engineer",
            "Other"
          ]
        },
        {
          "id": "certificateName",
          "label": "If Other, Enter Certification Name",
          "type": "text",
          "showIf": {
            "field": "certificateMaster",
            "value": "Other"
          }
        },
        {
          "id": "certificateId",
          "label": "Certificate ID / License Number",
          "type": "text",
          "required": true
        },
        {
          "id": "uploadCertificate",
          "label": "Upload Certificate File",
          "type": "photo",
          "buttonText": {
            "choose": "Choose File",
            "upload": "Upload Certificate",
            "view": "Preview"
          },
          "buttons": [
            {
              "id": "photoSelect",
              "label": "Choose File",
              "variant": "outlineSecondary",
              "size": "sm",
              "bgColor": "#fff",
              "textColor": "#333",
              "borderColor": "#999"
            },
            {
              "id": "photoUpload",
              "label": "Upload Certificate",
              "variant": "primary",
              "size": "sm",
              "bgColor": "#451111",
              "textColor": "#fff"
            },
            {
              "id": "photoView",
              "label": "Preview",
              "variant": "secondary",
              "size": "sm",
              "bgColor": "#e5e5e5",
              "textColor": "#111"
            }
          ],
          "required": true
        }
      ]
    }
  ],
  "actions": [
    {
      "id": "previous",
      "label": "Previous",
      "variant": "outlineSecondary",
      "size": "md"
    },
    {
      "id": "next",
      "label": "Next â†’",
      "variant": "primary",
      "size": "md",
      "bgColor": "#451111"
    },
    {
      "id": "save",
      "label": "Save Employee Record",
      "bgColor": "#451111",
      "textColor": "#fff",
      "size": "md"
    },
    {
      "id": "cancel",
      "label": "Cancel Entry",
      "borderColor": "#B11212",
      "textColor": "#B11212",
      "bgColor": "#fff",
      "size": "md"
    },
    {
      "id": "addExperience",
      "label": "+ Add Previous Experience",
      "variant": "outlineSecondary",
      "size": "md",
      "fullWidth": true,
      "bgColor": "#ffffff",
      "textColor": "#333",
      "borderColor": "#999"
    },
    {
      "id": "removeCompany",
      "label": "Remove This Experience",
      "variant": "outlineDanger",
      "size": "sm"
    },
    {
      "id": "addCertification",
      "label": "+ Add Professional Certification",
      "variant": "outlineSecondary",
      "size": "md",
      "fullWidth": true,
      "bgColor": "#ffffff",
      "textColor": "#333",
      "borderColor": "#999"
    },
    {
      "id": "removeCertification",
      "label": "Remove Certification",
      "variant": "outlineDanger",
      "size": "sm"
    }
  ]
}