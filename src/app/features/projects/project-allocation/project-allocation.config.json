{
  "title": "Project Resource Allocation",
  "apiEndpoints": {
    "employees": "{{API_BASE}}/employees",
    "projects": "{{API_BASE}}/projects",
    "requirements": "{{API_BASE}}/requirements?projectId={projectId}",
    "allocations": "{{API_BASE}}/project-allocations"
  },
  
  "sections": [
    {
      "title": "Project & Requirements",
      "type": "info-grid",
      "columns": 2,
      "fields": [
        { "label": "Project Name", "key": "projectName", "icon": "description" },
        { "label": "Client", "key": "clientName", "icon": "business" },
        { "label": "Required Positions", "key": "requiredHeadcount", "icon": "group" },
        { "label": "Work Type", "key": "workType", "icon": "work" }
      ]
    }
  ],
  
  "searchFilter": {
    "placeholder": "Search employees by name, code, department, or job title",
    "keys": ["employeeName", "employeeCode", "department", "jobTitle"],
    "filters": [
      {
        "key": "department",
        "label": "All Departments",
        "options": [
          "All Departments",
          "Information Technology (IT)",
          "Human Resource (HR)",
          "Finance",
          "Sales",
          "Marketing",
          "Development"
        ]
      },
      {
        "key": "jobTitle",
        "label": "All Job Titles",
        "options": []
      }
    ]
  },
  
  "actions": [
    {
      "id": "saveAllocation",
      "label": "Save Allocations",
      "variant": "primary",
      "icon": "save",
      "bgColor": "#5b0f14",
      "textColor": "white"
    },
    {
      "id": "cancel",
      "label": "Cancel",
      "variant": "outlineSecondary",
      "icon": "cancel"
    }
  ]
}