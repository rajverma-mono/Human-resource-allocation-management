      ]
    },
    {
      "name": "Allocation & Roster",
      "code": "ar",
      "route": "/roster",
      "roles": ["admin", "hr", "pm"],
      "sidebar": [
        { "label": "Resource Allocation", "icon": "fas fa-sitemap", "route": "/roster/assign" },
        { "label": "Roster Calendar", "icon": "fas fa-calendar", "route": "/roster/calendar" }
